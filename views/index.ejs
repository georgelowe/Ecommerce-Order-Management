<div class="page-container">
  <!-- include header -->
  <%- include('include/_header') %>

  <main id="site-main">
    <div class="container">
      <div class="cta-button">
        <a href="/add-order">New Order</a>
      </div>

      <!-- Form handling -->
      <form action="/" method="POST">
        <table class="table-container">
          <thead class="thead-dark">
            <tr>
              <th>Date</th>
              <th>Customer</th>
              <th>Pet Name</th>
              <th>Product</th>
              <th>Background</th>
              <th>Batch</th>
              <th>Status</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <!-- include table content -->
            <%- include('include/_show') %>
          </tbody>
        </table>
      </form>
    </div>
  </main>

  <!-- include footer -->
  <%- include('include/_footer') %>
</div>
