<div class="page-container">
  <!-- include header -->
  <%- include('include/_header') %>

  <main id="site-main">
    <div class="cta-button">
      <a href="/">All Orders</a>
    </div>
    <div class="form-container">
      <div class="form" id="order-form">
        <form method="POST" id="update_order" enctype="multipart/form-data">
          <div class="new_order">
            <div class="form-header">
              <div class="form-title">Update Order</div>
              <span class="form-error" id="form-error"></span>
            </div>

            <div class="form-control">
              <input
                type="text"
                name="customer_name"
                placeholder="Customer Name"
                value="<%= order.customer_name %> "
              />
              <input type="hidden" name="id" value="<%= order._id %>" />
            </div>
            <div class="form-control">
              <input
                type="text"
                name="pet_name"
                placeholder="Pet Name"
                value="<%= order.pet_name %>"
              />
            </div>

            <div class="colour-options-container">
              <div class="colour-options" id="white"></div>
              <div class="colour-options" id="eggshell"></div>
              <div class="colour-options" id="midnight-blue"></div>
              <div class="colour-options" id="forest-green"></div>
              <div class="colour-options" id="charcoal"></div>
              <div class="colour-options" id="lemon"></div>
              <div class="colour-options" id="grey"></div>
              <div class="colour-options" id="new-colour"></div>
            </div>

            <div class="select-options-container">
              <select class="select" name="product_type" id="products">
                <option value="current">
                  Current item: <%= order.product_type %>
                </option>
                <option selected="selected" value="Download">
                  Digital File
                </option>
                <option value="A4 Print">A4 Print Only</option>
                <option value="30x40cm Print">30x40cm Print Only</option>
                <option value="50x70cm Print">50x70cm Print Only</option>
                <option value="A4 Black Frame">A4 Black Frame</option>
                <option value="A4 White Frame">A4 White Frame</option>
                <option value="30x40cm Black Frame">30x40cm Black Frame</option>
                <option value="30x40cm White Frame">30x40cm White Frame</option>
                <option value="50x70cm Black Frame">50x70cm Black Frame</option>
                <option value="50x70cm White Frame">50x70cm White Frame</option>
              </select>
            </div>

            <div class="form-control">
              <input
                type="text"
                name="artwork_batch"
                placeholder="Artist Batch"
                value="<%= order.artwork_batch %>"
              />
            </div>

            <div class="form-control">
              <input
                type="text"
                name="background"
                placeholder="Background Colour"
                value="<%= order.background %>"
                id="background-input"
              />
            </div>

            <div class="form-control hidden-address-inputs">
              <input
                type="text"
                name="line1"
                placeholder="Address Line 1"
                value="<%= order.line1%>"
              />
            </div>
            <div class="form-control hidden-address-inputs">
              <input
                type="text"
                name="line2"
                placeholder="Address Line 2"
                value="<%= order.line2%>"
              />
            </div>
            <div class="form-control hidden-address-inputs">
              <input
                type="text"
                name="postalOrZipCode"
                placeholder="Postal/Zip Code"
                value="<%= order.postalOrZipCode%>"
              />
            </div>
            <div class="form-control hidden-address-inputs">
              <input
                type="text"
                name="countryCode"
                placeholder="e.g. UK, US"
                value="<%= order.countryCode%>"
              />
            </div>
            <div class="form-control hidden-address-inputs">
              <input
                type="text"
                name="townOrCity"
                placeholder="City"
                value="<%= order.townOrCity%>"
              />
            </div>
            <div class="form-control hidden-address-inputs">
              <input
                type="text"
                name="stateOrCounty"
                placeholder="County/State"
                value="<%= order.stateOrCounty%>"
              />
            </div>

            <div class="select-options-container">
              <select class="select" name="status" id="status">
                <option value="current">
                  Current status: <%= order.status %>
                </option>
                <option value="Not Started">Not Started</option>
                <option value="Drawing">Drawing</option>
                <option value="Awaiting Approval">Awaiting Approval</option>
                <option value="Done">Done</option>
                <option value="In Revision">In Revision</option>
                <option value="Cancelled<">Cancelled</option>
              </select>
            </div>

            <div class="form-group">
              <button type="submit">Save</button>
            </div>
          </div>
        </form>

        <!-- Shipping API -->
        <form action="/" method="POST">
          <input
            type="hidden"
            name="name"
            value="<%= order.customer_name %> "
          />
          <input type="hidden" name="line1" value="<%= order.line1 %> " />
          <input type="hidden" name="line2" value="<%= order.line2%> " />
          <input
            type="hidden"
            name="postalOrZipCode"
            value="<%= order.postalOrZipCode %> "
          />
          <input
            type="hidden"
            name="countryCode"
            value="<%= order.countryCode %> "
          />
          <input
            type="hidden"
            name="townOrCity"
            value="<%= order.townOrCity %> "
          />
          <input
            type="hidden"
            name="stateOrCounty"
            value="<%= order.stateOrCounty %> "
          />

          <button type="submit">Submit For Printing</button>
        </form>
      </div>
    </div>
  </main>

  <!-- include footer -->
  <%- include('include/_footer') %>
</div>
